{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AccessToWebsiteBuckets",
            "Effect": "Allow",
            "Action": [
                "s3:PutBucketWebsite",
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::<name of bucket>",
                "arn:aws:s3:::<name of bucket>*"
            ]
        }
    ]
}